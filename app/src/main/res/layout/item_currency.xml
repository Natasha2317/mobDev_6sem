<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/margin_currency_name"
    android:layout_marginHorizontal="@dimen/fab_margin"
    android:background="@drawable/round_corners">

        <TextView
            android:id="@+id/rate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_currency_name"
            android:text="@string/description"
            android:textColor="@color/main_text"
            android:textSize="@dimen/main_text"
            android:padding="@dimen/padding_item"/>

        <TextView
            android:id="@+id/rate_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/description"
            android:textColor="@color/currency_value"
            android:textSize="@dimen/main_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="#00ffffff"
                android:src="@drawable/star"
                android:padding="7dp"
                 />

        </RelativeLayout>


</LinearLayout>