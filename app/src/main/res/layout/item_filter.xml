<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/margin_currency_name"
    android:layout_marginHorizontal="@dimen/fab_margin"
    android:background="@drawable/round_corners">


        <TextView
            android:id="@+id/rate_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_item_currency"
            android:textColor="@color/currency_value"
            android:textSize="@dimen/main_text"
            android:padding="@dimen/padding_star"/>



</LinearLayout>