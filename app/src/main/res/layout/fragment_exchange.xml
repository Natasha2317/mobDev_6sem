<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.main.ExchangeFragment"
    android:backgroundTint="@color/background"
    android:id="@+id/fragment_exchange">


    <LinearLayout
        android:id="@+id/card_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_corners"
        android:orientation="horizontal"
        android:padding="@dimen/main_padding"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/rate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_currency_name"
            android:text="@string/description"
            android:textColor="@color/main_text"
            android:textSize="@dimen/main_text" />

        <EditText
            android:id="@+id/valueFirstCurrency"
            android:layout_width="144dp"
            android:layout_height="30dp"
            android:padding="0dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginStart="@dimen/margin_currency_value"
            android:backgroundTint="@color/main_text"
            android:textColor="@color/currency_value"
            android:textSize="@dimen/main_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="#00ffffff"
                android:src="@drawable/star" />

        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/card_id1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="11dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/round_corners"
        >

        <TextView
            android:id="@+id/rate_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_currency_name"
            android:text="@string/description"
            android:textColor="@color/main_text"
            android:textSize="@dimen/main_text" />

        <TextView
            android:id="@+id/valueSecondCurrency"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_currency_value"
            android:text="Значение"
            android:textColor="@color/currency_value"
            android:textSize="@dimen/main_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/favorite1"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#00ffffff"
                android:src="@drawable/star" />

        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="80dp"
        android:text="Обменять"
        android:backgroundTint="@color/currency_value"
        android:textColor="@color/background"/>


</LinearLayout>